{{# if smenus}}

<div class="order"> 
    
    <div class="row">
    <h1 style="text-align: center;margin-top: 5%;margin-bottom:3%;font-weight:bolder;color:red!important">My Orders</h1>
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{# each smenus}}
            <li class="list-group-item" style="font-size: 2rem;">
                <span class="badge">{{this.qty}}</span>
                <strong>{{this.item.title}}</strong>
                <span class="label label-success">&#x20A6;{{this.price}}</span>
                <div class="btn-group" >
                    <button class="btn btn-primary btn-md dropdown-toggle" type="button" data-toggle="dropdown">Action
                        <span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <li><a href="/reduce/{{this.item._id}}">Reduce by one</a></li>
                        <li><a href="/remove/{{this.item._id}}">Remove all</a></li>
                    </ul>
                </div>
            </li>
            {{/each}}

        </ul>
    </div>
</div>=
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <div >
            <Strong style="color: white;font-size:3rem" class="pull-right" >Total: &#8358;{{totalPrice}}</Strong>
        </div>
        
    </div>
</div>
<hr>
<div class="row">
    <div class="col-sm-12 col-md-12 col-md-offset-3 col-sm-offset-3">
        <a href="/shop/checkout" type="button" class="btn btn-success">Make Order Now</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2 id="empty">No Item in Cart. <br>   <a href="/" style="font-size: 3rem;color:red">Go to Homepage</a> </h2>
    </div>
</div>
</div>

{{/if}}

<style>
    body{
        background-image: url(../images/weby.jpg);
    }
    #empty{
        margin-top: 20%;
        margin-left: 20%;
        margin-right: 10%;
        font-size: 8rem;
        font-weight: bolder;
        color: white;
    }
    button{
        border-radius: 8% !important;
        padding: 5% !important;
    }
  .order{
      margin-top: 5%;
  }
</style>

