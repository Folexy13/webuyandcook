        .logo {
            top: 0;
            left: 0;
            position: absolute;
            z-index: 999999;
        }
    </style>
</head>
<a href="/" class="logo ">
    <img src="../images/menalogo.png" alt="" height="60px" width="60px">

    <h2 style="color: #fff;">WeBuyNCook</h2>
</a>
   

<div class="limiter">
    
    <div class="container-login100" style="background-image: url('../images/weby.jpg');">
    
        <div class="wrap-login100">
            <form method="POST" action="/user/forgot" class="">
                {{#if hasErrors}}
                <div class="alert fade-in" style="background-color: red;color:white ">
                    {{#each errorMsg}} <br>
                    {{this}}
                    {{/each}}
                </div>
                {{/if}}
                {{#if message}}
                <div class="alert fade-in" style="background-color: rgb(20, 122, 20);color:white ">
                    {{#each sucessMsg}} <br>
                    {{this}}
                    {{/each}}
                </div>
                {{/if}}
                    <span class="login100-form-title p-b-34 p-t-27">
                        Forgot Password?
                    </span>
                <div class="wrap-input100 validate-input">
                    <input class="input100" type="email" name="email" placeholder="Email" autocomplete="new-password">
                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                </div>
                
                <input type="hidden" name="_csrf" value={{csrfToken}}>
                <button class="login100-form-btn">
                    Reset Password
                </button>
            </form>
        </div>
    </div>
</div>

