<!DOCTYPE html>
<html>

<head>
    <title>{{title}}</title>
    <link rel='stylesheet' href='/css/profile.css' />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" href="/images/menalogo.png" type="image/x-icon" />

</head>
<style>
    td button {
        padding: 4px;
        background-color: rgba(0, 0, 255, 0.753);
        border-radius: 10px;
    }

    body {
        counter-reset: Serial;
        ;
    }

    td button a {
        color: white;
    }

    #empty {
        margin-top: 10%;
        margin-left: 20%;
        margin-right: 10%;
        font-size: 3rem;
        font-weight: 20px;
    }

    input {
        border: none;
    }

    .recentCustomers table {
        justify-content: space-between;
    }

    .recentCustomers table td input,
    .recentCustomers table td h4 {
        text-align: center;
        outline: none;
        font-size: 20px;
    }

    .badge {
        font-weight: 800;
        color: red;
        font-size: 1em;
        margin-left: 150px;
        border-radius: 50%;
        width: 30px;
        text-align: center;
        height: 30px;
    }

    #table tbody tr td:first-child::after {
        counter-increment: Serial;
        /* Increment the Serial counter */
        content: counter(Serial);
        /* Display the counter */
    }

.note{
    display: flex;
    flex-direction: column;
    max-height: 100px;
    color: #002;
}

.note>small{
    text-align: center;
}

.note>small .button{
padding:10px;
text-align: center;
border-radius: 8px;
margin-top: 8px;
background-color: red;
color: white;
cursor: pointer;
float: right;
}
.note>small .button a{
    text-decoration: none;
    color: #fff;
}

.notifications{
  position: relative;
  width: 100%;
  height: 100vh;
  padding-top: 0;
  margin-top: -50px;
  background-color: #f4f4f4;
}
.notifications>.recentOrders {
  position: relative;
  min-height: 530px;
}
</style>


<body>
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="/">
                        <span class="icon"><img src="https://webuyandcook.com/images/logo.png" alt=""></span>
                        <span class="title">
                            <h2>Webuyndcook</h2>
                        </span>
                    </a>
                </li>
                <li >
                    <a href="/user/profile">
                        <span class="icon"><i class="fa fa-tachometer" aria-hidden="true"></i></span>
                        <span class="title">My Dashboard </span>
                    </a>
                </li>
                <li>
                    <a href="/profile/cart" class="notification">
                        <span class="icon"><i class="fa fa-shopping-cart" aria-hidden="true"><span
                                    class="badg">{{cart}}</span></i></span>
                        <span class="title">Cart</span>
                    </a>
                </li>


                <li>
                    <a href="/user/profile/settings">
                        <span class="icon"><i class="fa fa-cogs" aria-hidden="true"></i></span>
                        <span class="title">Settings </span>
                    </a>
                </li>

                <li class="active">
                    <a href="#" class="notification">
                        <span class="icon"><i class="fa fa-bell" aria-hidden="true"><span
                                    class="badg">3</span></i></span>
                        <span class="title">Notifications</span>
                    </a>
                </li>

                <li class="blue">
                    <a href="#">
                        <span class="icon"><i class="fa fa-question-circle" aria-hidden="true"></i></span>
                        <span class="title">Help </span>
                    </a>
                </li>

                <li class="red">
                    <a href="/user/logout">
                        <span class="icon"><i class="fa fa-sign-out" aria-hidden="true"></i></span>
                        <span class="title">Log-out </span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="main">
            <!-- Header -->
            <div class="topbar">
                <div class="toggle" onclick="toggleMenu();"></div>
                <div class="search">
                    <label>
                        <input type="text" placeholder="search here">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </label>
                </div>
                <div class="user">
                    <a target="_blank" href="{{userImage}}"><img src={{userImage}} alt="no-image"></a>
                </div>
            </div>

            <div class="notifications">
                <div class="recentOrders" style="margin-top: 3%;margin-left:1rem auto;">
                    <h2 style="text-align: center;text-align: center;margin-top: 1%;margin-bottom:3%;font-weight:bolder;color:red!important"><u>Notifications</u></h2>
                    <div class="order">
                    {{#if  Ordernotifications}}
                    {{#each Ordernotifications}}
                        <div class="row note">
                            <small style="padding-right: 20px;">Your Order {{this._id}} has been recieved and  is in progress and await approval.
                            <span class="button"><a href="/user/delete/notifications">Delete</a></span></small>
                            {{/each}}
                        </div>
                        {{else}}
                        No new notifications
                    {{/if}}
                    </div>
                </div>
            </div>
            <div class="topbar" style="bottom: 0 !important;position:fixed;background-color: #010; margin:0">
                <div style="color: white;">&copy;2021 WebuyNCook.All Rights reserved</div>
            </div>


        </div>


        <script>
            function toggleMenu() {
                let toggle = document.querySelector('.toggle');
                toggle.classList.toggle('active');
                let navigation = document.querySelector('.navigation');
                navigation.classList.toggle('active');
                let main = document.querySelector('.main');
                main.classList.toggle('active');

            }
        </script>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
    </div>
</body>
</html>